@model AjudAkiWeb.Models.AssinaturaViewModel

@{
    ViewData["Title"] = "Criar novo plano";
}

<head>
    <link href="~/css/assinaturaCreate.css" rel="stylesheet" asp-append-version="true" />
</head>

<div class="page-header">
    <div class="header-content">
        <div class="title-section">
            <h1><i class="fa-solid fa-plus-circle"></i> Criar novo plano</h1>
            <p class="subtitle">Preencha os dados do plano de assinatura</p>
        </div>
        <a asp-action="Index" class="btn btn-back">
            <i class="fa-solid fa-arrow-left"></i> <span>Voltar</span>
        </a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i> <strong>Erro!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <i class="fa-solid fa-file-lines"></i>
            <h2>Dados do plano</h2>
        </div>

        <form asp-action="Create" class="assinatura-form">
            <div asp-validation-summary="All" class="alert alert-warning validation-summary"></div>

            <div class="form-group">
                <label asp-for="Nome" class="form-label">
                    <i class="fa-solid fa-tag"></i> Nome do plano
                </label>
                @Html.DropDownListFor(m => m.Nome, Model.PlanoList, "Selecione o plano", new { @class = "form-control" })
                <span asp-validation-for="Nome" class="text-danger validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="form-label">
                    <i class="fa-solid fa-toggle-on"></i> Status do plano
                </label>
                @Html.DropDownListFor(m => m.Status, Model.StatusList, "Selecione o status", new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="form-label">
                    <i class="fa-solid fa-dollar-sign"></i> Valor
                </label>
                <div class="input-group">
                    <span class="input-group-text">R$</span>
                    <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                </div>
                <span asp-validation-for="Valor" class="text-danger validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="form-label">
                    <i class="fa-solid fa-align-left"></i> Descrição
                </label>
                <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Ex: Plano básico com até 5 anúncios ativos." maxlength="150"></textarea>
                <div class="form-help">
                    <i class="fa-solid fa-info-circle"></i>
                    <span>Máximo de 150 caracteres.</span>
                </div>
                <span asp-validation-for="Descricao" class="text-danger validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-save">
                    <i class="fa-solid fa-check"></i> Salvar plano
                </button>
                <a asp-action="Index" class="btn btn-cancel">
                    <i class="fa-solid fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
