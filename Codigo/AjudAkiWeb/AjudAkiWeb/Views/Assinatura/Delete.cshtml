@model AjudAkiWeb.Models.AssinaturaViewModel

@{
    ViewData["Title"] = "Excluir plano";
}

<head>
    <link href="~/css/assinaturaCreate.css" rel="stylesheet" asp-append-version="true" />
</head>

<div class="page-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
    <div class="header-content">
        <div class="title-section">
            <h1><i class="fa-solid fa-trash"></i> Excluir plano</h1>
            <p class="subtitle">Tem certeza de que deseja excluir este plano?</p>
        </div>
        <a asp-action="Index" class="btn btn-back">
            <i class="fa-solid fa-arrow-left"></i> <span>Voltar</span>
        </a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i> <strong>Erro!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <i class="fa-solid fa-exclamation-triangle" style="color: #dc3545;"></i>
            <h2>Informações do plano</h2>
        </div>

        <div class="alert alert-warning" role="alert">
            <i class="fa-solid fa-exclamation-triangle"></i>
            <strong>Atenção!</strong> Esta ação é irreversível. Todos os dados relacionados a este plano serão perdidos.
        </div>

        <div class="details-content">
            <dl class="row">
                <dt class="col-sm-4">
                    <i class="fa-solid fa-hashtag"></i> @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-8">
                    <strong>#@Html.DisplayFor(model => model.Id)</strong>
                </dd>
                <dt class="col-sm-4">
                    <i class="fa-solid fa-tag"></i> @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-8">
                    <strong class="text-primary">@Html.DisplayFor(model => model.Nome)</strong>
                </dd>
                <dt class="col-sm-4">
                    <i class="fa-solid fa-toggle-on"></i> @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Status.ToString() == "ATIVA" ? "badge-active" : "badge-inactive")">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </dd>
                <dt class="col-sm-4">
                    <i class="fa-solid fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd class="col-sm-8">
                    <strong class="text-success">R$ @Model.Valor.ToString("N2")</strong>
                </dd>
                <dt class="col-sm-4">
                    <i class="fa-solid fa-align-left"></i> @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-8">
                    <div class="alert alert-light border">
                        <p class="mb-0">@Html.DisplayFor(model => model.Descricao)</p>
                    </div>
                </dd>
            </dl>
        </div>

        <div class="form-actions">
            <form asp-action="Delete" method="post" style="display: contents;">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); border: none;">
                    <i class="fa-solid fa-trash"></i> Confirmar exclusão
                </button>
            </form>
            <a asp-action="Index" class="btn btn-cancel">
                <i class="fa-solid fa-times"></i> Cancelar
            </a>
        </div>
    </div>
</div>
