@model AjudAkiWeb.Models.AvaliarViewModel

@{
    ViewData["Title"] = "Avaliar Profissional";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-star me-2"></i>Avaliar Profissional
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="avaliarForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Campo Id (oculto) -->
                        <input asp-for="Id" type="hidden" />

                        <!-- Contratação -->
                        <div class="mb-4">
                            <label asp-for="IdContratacao" class="form-label fw-bold">
                                <i class="fas fa-handshake me-2 text-primary"></i>@Html.DisplayNameFor(model => model.IdContratacao)
                            </label>
                            <select asp-for="IdContratacao" asp-items="Model.ListaContratacaos" class="form-select form-select-lg">
                                <option value="">Selecione uma contratação</option>
                            </select>
                            <span asp-validation-for="IdContratacao" class="text-danger"></span>
                        </div>

                        <!-- Nota do Serviço -->
                        <div class="mb-4">
                            <label asp-for="NotaServico" class="form-label fw-bold">
                                <i class="fas fa-tools me-2 text-primary"></i>@Html.DisplayNameFor(model => model.NotaServico)
                            </label>
                            <div class="rating-container">
                                <div class="star-rating mb-2">
                                    @for (int i = 5; i >= 1; i--)
                                    {
                                        <input type="radio" name="NotaServicoStar" value="@i" id="servico-@i" class="star-input" />
                                        <label for="servico-@i" class="star-label">
                                            <i class="fas fa-star"></i>
                                        </label>
                                    }
                                </div>
                                <input asp-for="NotaServico" type="number" class="form-control d-none" min="0" max="5" step="1" id="NotaServico" />
                                <span asp-validation-for="NotaServico" class="text-danger d-block mt-1"></span>
                                <small class="text-muted">Selecione uma nota de 0 a 5 estrelas</small>
                            </div>
                        </div>

                        <!-- Nota do Profissional -->
                        <div class="mb-4">
                            <label asp-for="NotaProfissional" class="form-label fw-bold">
                                <i class="fas fa-user-tie me-2 text-primary"></i>@Html.DisplayNameFor(model => model.NotaProfissional)
                            </label>
                            <div class="rating-container">
                                <div class="star-rating mb-2">
                                    @for (int i = 5; i >= 1; i--)
                                    {
                                        <input type="radio" name="NotaProfissionalStar" value="@i" id="profissional-@i" class="star-input" />
                                        <label for="profissional-@i" class="star-label">
                                            <i class="fas fa-star"></i>
                                        </label>
                                    }
                                </div>
                                <input asp-for="NotaProfissional" type="number" class="form-control d-none" min="0" max="5" step="1" id="NotaProfissional" />
                                <span asp-validation-for="NotaProfissional" class="text-danger d-block mt-1"></span>
                                <small class="text-muted">Selecione uma nota de 0 a 5 estrelas</small>
                            </div>
                        </div>

                        <!-- Status (oculto com valor padrão) -->
                        <input asp-for="Status" type="hidden" value="1" />

                        <!-- Comentário -->
                        <div class="mb-4">
                            <label asp-for="Comentario" class="form-label fw-bold">
                                <i class="fas fa-comment me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Comentario)
                            </label>
                            <textarea asp-for="Comentario" class="form-control" rows="5" 
                                      placeholder="Compartilhe sua experiência com o serviço e o profissional..."></textarea>
                            <span asp-validation-for="Comentario" class="text-danger"></span>
                            <small class="text-muted">Máximo de 500 caracteres</small>
                            <div class="character-count text-end mt-1">
                                <span id="charCount">0</span>/500
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>Salvar Avaliação
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .rating-container {
            position: relative;
        }

        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
            gap: 5px;
        }

        .star-input {
            display: none;
        }

        .star-label {
            font-size: 2rem;
            color: #ddd;
            cursor: pointer;
            transition: color 0.2s;
        }

        .star-label:hover,
        .star-label:hover ~ .star-label {
            color: #ffc107;
        }

        .star-input:checked ~ .star-label,
        .star-input:checked ~ .star-label ~ .star-label {
            color: #ffc107;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .form-select-lg {
            padding: 0.75rem 1rem;
        }

        .character-count {
            font-size: 0.875rem;
            color: #6c757d;
        }
    </style>

    <script>
        $(document).ready(function() {
            // Sincronizar estrelas com input hidden para NotaServico
            $('input[name="NotaServicoStar"]').on('change', function() {
                $('#NotaServico').val($(this).val());
            });

            // Sincronizar estrelas com input hidden para NotaProfissional
            $('input[name="NotaProfissionalStar"]').on('change', function() {
                $('#NotaProfissional').val($(this).val());
            });

            // Inicializar valores das estrelas se já existirem
            if ($('#NotaServico').val()) {
                $('input[name="NotaServicoStar"][value="' + $('#NotaServico').val() + '"]').prop('checked', true);
            }
            if ($('#NotaProfissional').val()) {
                $('input[name="NotaProfissionalStar"][value="' + $('#NotaProfissional').val() + '"]').prop('checked', true);
            }

            // Contador de caracteres para comentário
            $('#Comentario').on('input', function() {
                var length = $(this).val().length;
                $('#charCount').text(length);
                
                if (length > 500) {
                    $('#charCount').css('color', '#dc3545');
                } else {
                    $('#charCount').css('color', '#6c757d');
                }
            });

            // Inicializar contador
            $('#Comentario').trigger('input');
        });
    </script>
}
