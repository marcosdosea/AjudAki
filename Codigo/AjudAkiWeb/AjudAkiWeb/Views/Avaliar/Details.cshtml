@model AjudAkiWeb.Models.AvaliarViewModel

@{
    ViewData["Title"] = "Detalhes da Avaliação";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Detalhes da Avaliação
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Código da Avaliação -->
                    <div class="mb-4 pb-3 border-bottom">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-hashtag me-2 text-primary"></i>
                            <span class="text-muted small">@Html.DisplayNameFor(model => model.Id)</span>
                        </div>
                        <h5 class="mb-0">#@Html.DisplayFor(model => model.Id)</h5>
                    </div>

                    <!-- Nome do Profissional -->
                    @if (!string.IsNullOrEmpty(Model.NomeProfissional))
                    {
                        <div class="mb-4 pb-3 border-bottom">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user-tie me-2 text-primary"></i>
                                <span class="text-muted small">Nome do Profissional</span>
                            </div>
                            <h5 class="mb-0 text-primary">@Html.DisplayFor(model => model.NomeProfissional)</h5>
                        </div>
                    }

                    <!-- Contratação -->
                    <div class="mb-4 pb-3 border-bottom">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-handshake me-2 text-primary"></i>
                            <span class="text-muted small">@Html.DisplayNameFor(model => model.IdContratacao)</span>
                        </div>
                        <h5 class="mb-0">@Html.DisplayFor(model => model.IdContratacao)</h5>
                    </div>

                    <!-- Nota do Serviço -->
                    <div class="mb-4 pb-3 border-bottom">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-tools me-2 text-primary"></i>
                            <span class="text-muted small">@Html.DisplayNameFor(model => model.NotaServico)</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="star-rating-display me-3">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Model.NotaServico)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-muted"></i>
                                    }
                                }
                            </div>
                            <span class="badge bg-warning text-dark fs-6">
                                @Html.DisplayFor(model => model.NotaServico) / 5
                            </span>
                        </div>
                    </div>

                    <!-- Nota do Profissional -->
                    <div class="mb-4 pb-3 border-bottom">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-user-tie me-2 text-primary"></i>
                            <span class="text-muted small">@Html.DisplayNameFor(model => model.NotaProfissional)</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="star-rating-display me-3">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Model.NotaProfissional)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-muted"></i>
                                    }
                                }
                            </div>
                            <span class="badge bg-warning text-dark fs-6">
                                @Html.DisplayFor(model => model.NotaProfissional) / 5
                            </span>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="mb-4 pb-3 border-bottom">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-info-circle me-2 text-primary"></i>
                            <span class="text-muted small">@Html.DisplayNameFor(model => model.Status)</span>
                        </div>
                        <span class="badge bg-info fs-6">
                            @Html.DisplayFor(model => model.Status)
                        </span>
                    </div>

                    <!-- Comentário -->
                    @if (!string.IsNullOrEmpty(Model.Comentario))
                    {
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-comment me-2 text-primary"></i>
                                <span class="text-muted small">@Html.DisplayNameFor(model => model.Comentario)</span>
                            </div>
                            <div class="alert alert-light border">
                                <p class="mb-0 text-dark">@Html.DisplayFor(model => model.Comentario)</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-comment me-2 text-primary"></i>
                                <span class="text-muted small">@Html.DisplayNameFor(model => model.Comentario)</span>
                            </div>
                            <div class="alert alert-secondary">
                                <p class="mb-0 text-muted"><em>Nenhum comentário foi adicionado.</em></p>
                            </div>
                        </div>
                    }

                    <!-- Botões de Ação -->
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar para Lista
                        </a>
                        <div>
                            @if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("Administrator"))
                            {
                                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .star-rating-display {
        font-size: 1.5rem;
        letter-spacing: 3px;
    }

    .star-rating-display i {
        margin-right: 2px;
    }

    .border-bottom {
        border-color: #e9ecef !important;
    }

    .border-top {
        border-color: #e9ecef !important;
    }
</style>
