@model IEnumerable<AjudAkiWeb.Models.SolicitacaoServicoViewModel>

@{
    ViewData["Title"] = "Solicitações de Serviços";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary">Solicitações de Serviços</h1>
            <p class="text-muted">Gerenciamento centralizado de pedidos de suporte.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm" style="border-radius: 10px; padding: 10px 25px;">
            <i class="fas fa-plus-circle me-2"></i> Nova Solicitação
        </a>
    </div>

    <div class="card shadow-sm border-0" style="border-radius: 15px;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">@Html.DisplayNameFor(model => model.Nome)</th>
                            <th>@Html.DisplayNameFor(model => model.DataHoraSolicitacao)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th>@Html.DisplayNameFor(model => model.Valor)</th>
                            <th class="text-center pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">@item.Nome</div>
                                    <small class="text-muted text-truncate d-block" style="max-width: 200px;">@item.Descricao</small>
                                </td>
                                <td>@item.DataHoraSolicitacao.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @{
                                        var statusClass = item.Status switch
                                        {
                                            AjudAkiWeb.Models.StatusSolicitacaoEnum.PENDENTE => "bg-warning",
                                            AjudAkiWeb.Models.StatusSolicitacaoEnum.ACEITO => "bg-success",
                                            AjudAkiWeb.Models.StatusSolicitacaoEnum.RECUSADO => "bg-danger",
                                            AjudAkiWeb.Models.StatusSolicitacaoEnum.FINALIZADO => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass rounded-pill px-3">@item.Status</span>
                                </td>
                                <td class="fw-bold text-success">
                                    @(item.Valor?.ToString("C2") ?? "---")
                                </td>
                                <td class="text-center pe-4">
                                    <div class="btn-group shadow-sm" style="border-radius: 10px; overflow: hidden;">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary border-0" title="Editar">
                                            <i class="fas fa-edit text-white"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info border-0" title="Detalhes">
                                            <i class="fas fa-eye text-white"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger border-0" title="Excluir">
                                            <i class="fas fa-trash-alt text-white"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .btn-group .btn {
            border-radius: 0;
            padding: 8px 15px;
        }
        .table th {
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            color: #6c757d;
        }
    </style>
}
