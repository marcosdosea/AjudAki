@model IEnumerable<AjudAkiWeb.Models.SolicitacaoServicoViewModel>

@{
    ViewData["Title"] = "Solicitações de Serviços";
}

<link href="~/css/solicitacaoservico.css" rel="stylesheet" asp-append-version="true" />


<div class="container">
    <header>
        <h1>Solicitações de serviços</h1>
        <p>Gerencie os seus serviços.</p>
    </header>

    <div class="filters">
        <label for="filter-select">Filtros</label>
        <select id="filter-select">
            <option value="todos">Todos</option>
            <option value="aguardando">Aguardando orçamento</option>
            <option value="finalizado">Finalizado</option>
        </select>
    </div>

    <section class="service-requests">
        <h2>Aguardando orçamento</h2>

        @foreach (var item in Model)
        {
            <div class="service-request">
                <div class="info">
                    <h3>@Html.DisplayFor(modelItem => item.Nome)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Descricao)</p>
                    <p><strong>Data:</strong> @Html.DisplayFor(modelItem => item.DataHoraSolicitacao)</p>
                    <p><strong>Status:</strong> @Html.DisplayFor(modelItem => item.Status)</p>
                    <p><strong>Valor:</strong> @Html.DisplayFor(modelItem => item.Valor)</p>
                </div>
                <div class="actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-blue">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-green">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-red">Excluir</a>
                </div>
            </div>
        }
    </section>
</div>
