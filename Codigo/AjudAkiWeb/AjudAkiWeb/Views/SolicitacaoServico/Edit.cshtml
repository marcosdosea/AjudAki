@model AjudAkiWeb.Models.SolicitacaoServicoViewModel

@{
    ViewData["Title"] = "Editar Solicitação";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-0" style="border-radius: 15px;">
                <div class="card-header bg-primary text-white p-4" style="border-radius: 15px 15px 0 0;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-edit fa-2x me-3"></i>
                        <div>
                            <h2 class="mb-0 h4">Editar Solicitação #@Model.Id</h2>
                            <p class="mb-0 opacity-75">Atualize as informações ou o status do pedido.</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-4">
                            <!-- Título -->
                            <div class="col-md-12">
                                <label asp-for="Nome" class="form-label fw-bold font-sm">Título da Solicitação</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-tag text-muted"></i></span>
                                    <input asp-for="Nome" class="form-control border-start-0" placeholder="Ex: Reparo de Vazamento na Cozinha" />
                                </div>
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>

                            <!-- Descrição -->
                            <div class="col-md-12">
                                <label asp-for="Descricao" class="form-label fw-bold font-sm">Descrição Detalhada</label>
                                <textarea asp-for="Descricao" class="form-control" rows="3">@Model.Descricao</textarea>
                                <span asp-validation-for="Descricao" class="text-danger small"></span>
                            </div>

                            <!-- Data, Valor e Status -->
                            <div class="col-md-4">
                                <label asp-for="DataHoraSolicitacao" class="form-label fw-bold font-sm">Data</label>
                                <input asp-for="DataHoraSolicitacao" class="form-control" type="date" />
                                <span asp-validation-for="DataHoraSolicitacao" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Valor" class="form-label fw-bold font-sm">Valor (R$)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-dollar-sign text-muted"></i></span>
                                    <input asp-for="Valor" class="form-control border-start-0" placeholder="0,00" />
                                </div>
                                <span asp-validation-for="Valor" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Status" class="form-label fw-bold font-sm">Status</label>
                                <select asp-for="Status" asp-items="Html.GetEnumSelectList<AjudAkiWeb.Models.StatusSolicitacaoEnum>()" class="form-select"></select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>

                            <!-- Relacionamentos -->
                            <div class="col-md-4">
                                <label asp-for="IdCliente" class="form-label fw-bold font-sm">Cliente</label>
                                <select asp-for="IdCliente" asp-items="@Model.ListaClientes" class="form-select"></select>
                                <span asp-validation-for="IdCliente" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="IdProfissional" class="form-label fw-bold font-sm">Profissional</label>
                                <select asp-for="IdProfissional" asp-items="@Model.ListaProfissionais" class="form-select"></select>
                                <span asp-validation-for="IdProfissional" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="IdTipoServico" class="form-label fw-bold font-sm">Tipo de Serviço</label>
                                <select asp-for="IdTipoServico" asp-items="@Model.ListaTiposServico" class="form-select"></select>
                                <span asp-validation-for="IdTipoServico" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mt-5 d-flex gap-3">
                            <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm" style="border-radius: 10px;">
                                <i class="fas fa-save me-2"></i> Salvar Alterações
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2 text-white" style="border-radius: 10px;">
                                <i class="fas fa-arrow-left me-2"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <style>
        .form-label { font-size: 0.9rem; color: #495057; }
        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
        }
    </style>
}
