@model AjudAkiWeb.Models.SolicitacaoServicoViewModel

@{
    ViewData["Title"] = "Excluir Solicitação";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0" style="border-radius: 15px;">
                <div class="card-header bg-danger text-white p-4" style="border-radius: 15px 15px 0 0;">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h2 class="mb-0 h4">Excluir Solicitação?</h2>
                            <p class="mb-0 opacity-75">Esta ação não pode ser desfeita.</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4" role="alert">
                        Você está prestes a excluir a solicitação <strong>"@Model.Nome"</strong>.
                    </div>

                    <div class="bg-light p-3 rounded mb-4">
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted small text-uppercase">Código</dt>
                            <dd class="col-sm-8 fw-bold">#@Model.Id</dd>
                            
                            <dt class="col-sm-4 text-muted small text-uppercase">Data</dt>
                            <dd class="col-sm-8">@Model.DataHoraSolicitacao.ToString("dd/MM/yyyy")</dd>
                            
                            <dt class="col-sm-4 text-muted small text-uppercase">Status</dt>
                            <dd class="col-sm-8">@Model.Status</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-danger px-5 py-2 shadow-sm" style="border-radius: 10px;">
                                <i class="fas fa-trash-alt me-2"></i> Confirmar Exclusão
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2 text-white" style="border-radius: 10px;">
                                <i class="fas fa-times-circle me-2"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
