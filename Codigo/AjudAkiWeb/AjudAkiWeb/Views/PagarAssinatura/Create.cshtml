@model AjudAkiWeb.Models.PagarAssinaturaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PagarAssinaturaViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPagamento" class="control-label"></label>
                <input asp-for="DataPagamento" class="form-control" />
                <span asp-validation-for="DataPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                @Html.DropDownListFor(m => m.Status, Model.StatusList, "Selecione o Status", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Status)
            </div>
            <div class="form-group col-sm-8">
                <label asp-for="IdAssinatura" class="control-label"></label>
                <select asp-for="IdAssinatura" asp-items="@Model.ListaAssinaturas" class="form-control"></select>
                <span asp-validation-for="IdAssinatura" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-8">
                <label asp-for="IdProfissional" class="control-label"></label>
                <select asp-for="IdProfissional" asp-items="@Model.ListaProfissionais" class="form-control"></select>
                <span asp-validation-for="IdProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
