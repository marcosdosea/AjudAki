@model IEnumerable<AjudAkiWeb.Models.ServicoViewModel>

@{
    ViewData["Title"] = "Meus Serviços";
}

<head>
    <link href="~/css/ServicoIndex.css" rel="stylesheet" asp-append-version="true" />
</head>

<h1 class="text-3xl font-bold text-blue-700">Meus serviços</h1>
<p class="text-gray-600">Gerencie os seus serviços.</p>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
</head>
<body class="bg-gray-100 p-6">

    <div class="container mx-auto p-6 bg-white rounded-lg shadow-md border border-gray-300">
        <div class="space-y-6">

            <!-- Card de Serviço -->
            <div class="flex items-center p-4 border border-gray-200 rounded-lg">
                <img src="https://placehold.co/100" alt="Foto de perfil" class="w-16 h-16 rounded-full mr-4">
                <div class="flex-1">
                    <h3 class="text-xl font-semibold text-blue  -800">Fernando Silva</h3>
                    <p class="text-gray-600">Área de atuação: Encanador</p>
                    <p class="text-gray-600">Tipos de serviço: Instalação de tubulações, Reparo de vazamentos</p>
                    <p class="text-gray-600">Turno: Tarde e noite</p>
                </div>
                <div class="flex items-center space-x-1">
                    <span class="text-lg font-semibold text-gray-800">5.0/5.0</span>
                    <span class="text-yellow-400">★★★★★</span>
                </div>
            </div>

            <!-- Botões de Ações -->
            <div class="flex justify-between mt-2 space-x-2">
                <button class="flex-1 bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700">Verificar Solicitações</button>
                <button class="flex-1 bg-gray-200 text-gray-800 font-semibold py-2 rounded-lg hover:bg-gray-300">Modificar serviço</button>
                <button onclick="showPopup()" class="flex-1 bg-red-600 text-white font-semibold py-2 rounded-lg hover:bg-red-700">Apagar serviço</button>
            </div>

        </div>
    </div>

    <!-- Pop-up de confirmação -->
    <div id="deletePopup" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white p-6 rounded-lg max-w-sm w-full text-center">
            <h2 class="text-xl font-bold text-blue-700 mb-4">Apagar serviço</h2>
            <p class="text-left text-blue-700 mb-4">Tem certeza que deseja apagar o anúncio de seu serviço?</p>
            <p class ="text-left text-blue-700 mb-4">Motivo do cancelamento:</p>
            <input type="text" placeholder="Mensagem" class="border border-gray-300 p-2 rounded mb-4 w-full">
            <div class="flex justify-around">
                <button onclick="confirmDelete()" class="bg-green-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-green-700">Confirmar</button>
                <button onclick="hidePopup()" class="bg-gray-400 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-500">Cancelar</button>
            </div>
        </div>
    </div>

    <!-- JavaScript para controlar o pop-up -->
    <script>
        function showPopup() {
            document.getElementById('deletePopup').classList.remove('hidden');
        }

        function hidePopup() {
            document.getElementById('deletePopup').classList.add('hidden');
        }

        function confirmDelete() {
            // Aqui você pode adicionar lógica para excluir o serviço, se necessário
            alert('Serviço apagado com sucesso!');
            hidePopup();
        }
    </script>
</body>
</html>
