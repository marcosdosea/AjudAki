@model IEnumerable<AjudAkiWeb.Models.ServicoViewModel>
@{
    ViewData["Title"] = "Resultados da Busca";
}

<section class="resultados container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">Nenhum resultado encontrado.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var servico in Model)
            {
                <div class="list-group-item d-flex align-items-center">
                    <img src="@(servico.FotoUrl ?? Url.Content("~/img/profile-placeholder.png"))" alt="foto" style="width:90px;height:70px;object-fit:cover;border-radius:6px;" class="me-3" />
                    <div class="flex-grow-1">
                        <h5 class="mb-1">@(servico.ProfissionalNome ?? "Profissional")</h5>
                        <p class="mb-1"><strong>@(servico.Nome ?? "")</strong></p>
                        <small class="text-muted">Área: @(servico.AreaAtuacaoNome ?? "-") • Tipo: @(servico.TipoServicoNome ?? "-")</small>
                        <div><small>Avaliação média: @String.Format("{0:0.0}", servico.MediaAvaliacao) / 5</small></div>
                    </div>
                    <div class="ms-3">
                        <a class="btn btn-primary" asp-controller="Servico" asp-action="Details" asp-route-id="@servico.Id">Solicitar visita</a>
                    </div>
                </div>
            }
        </div>
    }
</section>
