@page
@using Core.Identity.Pages.Account
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <!-- Barra de navegação -->
    <nav class="navbar">
        <div class="navbar-content">
            <img src="~/img/Logo_AjudAki.webp" alt="Logo AjudAki" class="logo">
            <span class="site-name">AjudAki</span>
        </div>
    </nav>

    <!-- Container do login -->
    <div class="login-container">
        <h2>Login</h2>
        <form id="account" method="post" style="text-align: center; width: 100%;">
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="E-mail" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Senha" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-primary">Entrar</button>
            <div class="login-links">
                <p><a asp-page="./ForgotPassword">Esqueceu a senha?</a></p>
                <p><a asp-page="./Register">Não tem cadastro? Cadastre-se!</a></p>
            </div>
        </form>
    </div>

    <!-- Rodapé com redes sociais -->
    <footer class="footer">
        <div class="social-icons">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-linkedin-in"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
    </footer>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}